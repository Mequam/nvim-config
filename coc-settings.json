{
   "languageserver" : {
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gd", "gdscript", "gdscript3"],
      "port": 6005
    },
    "notes":{
      "command" : "zk",
      "args":["lsp"] ,
      "filetypes": ["markdown"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
   },
   "outline.splitCommand": "below 8sp"
}
